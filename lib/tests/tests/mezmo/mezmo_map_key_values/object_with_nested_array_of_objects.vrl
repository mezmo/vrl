mezmo_map_key_values({
  "A": 1,
  "B": 2,
  "user": {
    "name": {
      "First": "jon",
      "LasT": "doe",
      "age": 25
    },
    "labels": [
      "welcome",
      {
        "ENVS": {
          "Prod": {
            "name": "prod",
            "labels": [{"name": "prod"}]
          }
        },
        "tags": ["prod", "dev"]
      }
    ]
  }
}, max_depth: -1) -> |key, value| {
  new_key = if is_string(key) { downcase(string(key)) } else { key }
  new_value = if is_string(value) {
    upcase(string!(value))
  } else if is_integer(value) {
    int!(value) * 2
  } else {
    value
  }
  [new_key, new_value]
}
